<nav>
  <a href="/items">Shop</a> <a href="/carts">My Carts</a> <a href="/logout">Logout</a>
</nav>

<h1><%=@items[0].category%></h1>

<form action="/carts" method="post">
    <% @items.each do |item| %>
        <img src="../images/items/<%=@category%>/<%=item.name.downcase.gsub(" ","-")%>.jpg" alt="<%=item.name%>">
        <figcaption><%= item.name %>, <%= item.size %><br />Price: $<%= item.price %></figcaption>
        <input type="checkbox" name="items[]" id="<%=item.name%> value="<%=item.id%>">
        <br></br>
    <% end %>

    <% @carts.each do |cart| %>
        <%= cart %>

    <% end %>
    
    <% if !@carts.empty? %>
        <% @carts.each do |cart| %>
            <input type="radio" name="cart_name" id="<%=cart.name%>" value="<%=cart.id%>"><%=cart.name%>
        <% end %>
    <% end %>

    Create New Cart: <input type="text" name="new_cart" value="Default Shopping Cart"></input>
    <input type="submit" value="Add Items to Cart">
</form>
